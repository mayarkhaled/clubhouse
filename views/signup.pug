extends layout

block content
    h1  #{title}
    form(action="" method = 'POST')
        div.form-group
        
            label(for="fullname") Name
            input#name.form-control(type="text"  placeholder = "full name"  name = "fullname" value = (undefined === user) ? '' : user.fullname)
            br
        div.form-group
            label(for="email") Email
            input#email.form-control(type="text"  placeholder = "your email"  name = "email" value = (undefined === user) ? '' : user.email)
        div.form-group
            label(for="password") Password
            input#password.form-control(type ="password"  placeholder = "password"  name = "password" )
        div.form-group
            label(for="confirmpass") Confirm passowrd
            input#confirmpass.form-control(type="password"  placeholder = "confirm your password"  name = "confirmpass" value = (undefined === user) ? '' : user.password)
        button.btn.btn-primary(type='submit') Submit 
    if errors 
        ul
        for error in errors
            li!= error.msg    
